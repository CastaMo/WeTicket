//主页面
extends ../layout

block head
	meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
	title WeTicket
	block css

block content
	include log
	include purchase
	include personal
	#cover
	#mainpage
		#mainpage-wrapper
			#mainpage-container
				#top-container
					.logo
					.user
						.login-btn.btn
							span 登录
						.txt
							span |
						.register-btn.btn
							span 注册
					.user-logout
						span 退出
					.user-login
						.user-img
						.user-name

				include detail
				include person
				#mainpage-content
					#release-container
						.release-title
							p 正在热映
							.release-more
								span 更多 >>
						.release-movie
							.release-movie-left
								.single-release-movie
									.single-release-movie-img
									.single-release-movie-title
									.single-release-movie-information
									.single-release-movie-detail.btn
										span 查看详情
									.single-release-movie-purchase.btn
										span 购票
							.release-movie-right
					#middle-container
						.movie-select
							select._movie-select
								option 电影
								option 寒战2
								option 大鱼海棠
								option 惊天魔盗团2
						.hall-select
							select._hall-select
								option 影厅
								option 1号厅
								option 2号厅
								option 3号厅
						.season-select
							select._season-select
								option 场次
								option 19:00
								option 20:00
								option 21:00
					#soon-container
						.soon-title
							p 即将热映
							.soon-more
								span 更多 >>
						.soon-movie
				#bottom-container
					.contact
						span 联系我们
					.report
						span 问题反馈
					.copyright
						span Copyright © 2015 - 2016 WeTicket. All Rights Reserved.
	#JSON-hide #{mainJSON}